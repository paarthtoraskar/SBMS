@model IEnumerable<SBMS.Models.Product>

@{
    ViewBag.Title = "Product Catalog";
}

<style type="text/css">
    #nav
    {
        margin: 0;
        padding: 0;
        list-style: none;
        text-align: center;
    }

        #nav li
        {
            margin: 10px;
            padding: 0;
            width: 10em;
            position: relative;
            display: inline-block;
            vertical-align: top;
        }

        #nav h3
        {
            height: 20px;
        }

        #nav h4
        {
            height: 40px;
        }

        #nav p
        {
            height: 70px;
        }
</style>

<br />

<ul id="nav">
    @if (Model != null)
    {
        foreach (var item in Model)
        {
        <li>
            <div>
                <img src="@Url.Content("~/Content/themes/base/images/" + item.Icon)" alt="@item.Name" />
                @*</h3>*@
                <h3>@item.Name</h3>
                @*</h3>*@
                <h4>@item.PunchLine</h4>
                <p>@item.Message</p>
                <h3>$@item.Price</h3>
                <br />
                <span>@Html.ActionLink("Add To Cart", "AddToCart", "Cart", new { id = item.ProductId }, string.Empty)</span>
            </div>
        </li>
        }
    }
</ul>